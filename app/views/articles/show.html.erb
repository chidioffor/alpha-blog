
<div class="container mt-4 justify-content-center">
	<div class="card text-center shadow-lg p-3 mb-5 bg-white rounded">
	  <div class="card-header">
	    <strong><h4>Article created by: <%= @article.user.username %></h4></strong>
	  </div>
	  <div class="card-body">
	    <h5 class="card-title">Title: <%= @article.title %> </h5>
	    <div class="card-text text-left"><%= simple_format(@article.description) %></div>
	  	
	    	<%= link_to 'Back', articles_path, class:"btn btn-sm btn-outline-primary" %> |
			<%= link_to 'Delete', article_path(@article), method: :delete, class:"btn btn-sm btn-outline-danger", data: { confirm: "Are you sure?" }  %> 
	  </div>
	  <div class="card-footer text-muted">
	    Created: <%= time_ago_in_words(@article.created_at) %> | 
	    Modified: <%= time_ago_in_words(@article.updated_at) %>
	  </div>
	</div>
</div>

