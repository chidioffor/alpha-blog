

<%= render 'shared/errors', resource: @article %>

<%= form_with(model: @article, local: true) do |form| %>
	<div class="container mt-3 mb-3" id="user-container" >
		<div class="row justify-content-center mt-3 mb-3">
			<div class="card">
				<div class="card-body">
					<div class="card-title">
						<h5><%= form.label :title %></h5>
						<%= form.text_field :title, placeholder: 'Enter title', class:"form-control" %>
					</div>
						
					<div class="card-text">
						<%= form.label :description %><br>
						<%= form.text_area :description, placeholder: 'Enter description', cols: 20, rows: 5, class:"form-control" %>
					</div>

					<div class="card-text">
						<%= form.label :category, class: "col-form-label mt-2" %>
						<div class="col-12"> 
							<%= form.collection_select(:category_ids, Category.all, :id, :name,
							{ prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded form-control" }) %>
						</div>
					</div>

					<div class="mt-3">
						<%= form.submit class:"btn btn-sm btn-success" %>
						<%= link_to 'Back', articles_path, class:"btn btn-primary btn-sm" %> 
					</div>
				</div>
			</div>			
		</div>
	</div> 
<% end %>
