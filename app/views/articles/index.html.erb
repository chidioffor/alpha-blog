

<div class="container justify-content-center">
	<h3 class="text-center mt-4">Articles Listing Page</h3>
	<div class="row justify-content-md-center">
		<%= link_to 'New Articles', new_article_path, role:"button", class:"btn btn-primary btn-sm" %>
	</div>

	<% @articles.each do |article| %>
		<div class="row justify-content-md-center">
			<div class="col-8">
				<div class="card mt-4 text-center shadow mb-5 bg-white rounded ml-1">
				  <div class="card-header">
				    Article posted by: Chidi Offor
				  </div>
				  <div class="card-body">
				    <h5 class="card-title"><%=link_to article.title, article_path(article), class:"text-success" %></h5>
				    <p class="card-text"><%= truncate(article.description, length: 100) %></p>
				    <button type="button" class="btn btn-sm btn-outline-primary"><%= link_to 'Show', article_path(article) %></button>
				    <button type="button" class="btn btn-sm btn-outline-success"><%=link_to 'Edit', edit_article_path(article) %></button>
				    <button type="button" class="btn btn-sm btn-outline-danger"><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" }  %></button>
				  </div>
				  <div class="card-footer text-muted">
				    <small>Created: <%= time_ago_in_words(article.created_at) %> ago |  Modified: <%= time_ago_in_words(article.updated_at) %> ago</small>
				  </div>
				</div>
			</div>
		</div>
	<% end %>
</div>

