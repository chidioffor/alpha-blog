<%= render 'shared/errors', resource: @category %>

<%= form_with(model: @category, local: true) do |form| %>
	<div class="container mt-3 mb-3" id="user-container" >
		<div class="row justify-content-center">
			<div class="card">
				<div class="mb-3">
					<div class="form-label mt-3">
						<%= form.label :name, "Category Name" %>
						<%= form.text_field :name, placeholder: 'Enter a name', class:"form-control" %>
					</div>
					<div class="mt-3">
						<%= form.submit class:"btn btn-sm btn-success" %> 
						<% if logged_in? %>   
							<%= link_to 'Cancel', category_path, class:"btn btn-primary btn-sm" %>
						<% end %>
					</div>
				</div>		
			</div>
		</div>
	</div>
<% end %>

