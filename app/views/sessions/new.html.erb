<div class="container">
	<div class="row justify-content-center">
		<h3>Please login</h3>
	</div>
</div>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
	<div class="container mt-3 mb-3" id="user-container" >
		<div class="row justify-content-center">
			<div class="card">
				<div class="mb-3">
					<div class="form-label mt-3">
						<%= form.label :email %>
						<%= form.email_field :email, placeholder: 'Enter your email', class:"form-control" %>
					</div>
					<div class="form-label mt-3">
						<%= form.label :password %>
						<%= form.password_field :password, placeholder: 'Enter your password', class:"form-control" %>
					</div>
					<div class="mt-3">
						<%= form.submit "login", class:"btn btn-sm btn-success" %>
					</div>
				</div>		
			</div>
		</div>
	</div>
<% end %>