<div class="row justify-content-center mt-3">
	<h2><strong> Alpha Blogger's profile</strong></h2>
</div>
<div class="row mt-3 justify-content-center">
	<div class="digg_pagination">
	    <%= will_paginate @users %>
	</div>
</div>

<% @users.each do |user| %>
	<div class="container mt-3 mb-3" id="user-container" >
		<div class="row justify-content-center">
			<div class="card">
			  	<div class="card-header">
			    	<h3><strong><%= link_to user.username, user %>'s profile</strong></h3>
			  	</div>
			  	<div class="card-body">
			  		<% if user.avatar.attached? %>
						<%= image_tag user.avatar, size:"100x100", class:"rounded img-fluid mb3" %>
					<% end %>
			    	<h5 class="card-title">
			    		<%= user.username %> has created 
			    		<%= pluralize(user.articles.count, "article") %>
			    	</h5>
			    	<p class="card-text">
			    		Joined AlphaBlog <%= time_ago_in_words(user.created_at) %>
			    	</p>

			    	<% if logged_in? %>
						<% if (user == current_user) || (current_user.admin?) %>
							<%= link_to 'Edit Profile', edit_user_path(user), class:"btn btn-primary" %> 
							<%= link_to 'Delete Profile', user_path(user), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure? This will delete all associated articles too...?" } %> 
						<% end %>
					<% end %>
			    	<%= link_to 'Show Profile', user_path(user), class:"btn btn-success" %>
			  	</div>
			</div>
		</div>
	</div>
<% end %>

<div class="row mt-3 mb-3 justify-content-center">
	<div class="digg_pagination">
	    <%= will_paginate @users %>
	</div>
</div>
