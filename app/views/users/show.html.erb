<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-4">
			<div class="mx-auto testimonial-item mt-3 mb-5 mb-lg-0"
				<h3><%= @user.username %>'s profile</h3><br>

				<% if @user.avatar.attached? %>
					<%= image_tag @user.avatar, size:"150x150", class:"rounded-circle img-fluid mb3" %>
				<% end %>

				<div class="card-body mt-0"> 
					<%= link_to 'Back', articles_path, class:"btn btn-primary btn-sm" %>
				</div>
				<h3><%= @user.username %>'s Articles</h3>
			</div>
		</div>
	</div>
</div>

<%= render 'articles/articles' %>