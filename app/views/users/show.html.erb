
<div class="container mt-3 mb-3" id="user-container" >
	<div class="row justify-content-center">
		<div class="card">
		  	<div class="card-header">
		    	<h3><strong><%= @user.username %>'s profile</strong></h3>
		  	</div>
		  	<div class="card-body">
		  		<% if @user.avatar.attached? %>
					<%= image_tag @user.avatar, size:"150x150", class:"rounded-circle img-fluid mb3" %>
				<% end %>
		    	<div class="mt-2">
		    		<% if logged_in? && (@user == current_user) || current_user.admin? %>
		    			<%= link_to 'Edit Profile', edit_user_path(@user), class:"btn btn-primary" %>
		    			<%= link_to 'Delete Account', user_path(current_user), method: :delete, class:"btn btn-danger", data: { confirm: "Are you sure? This will delete all associated articles too...?"} %>
		    		<% end %>
		    		<%= link_to 'Show All Users', users_path, class:"btn btn-success" %>
		    	</div>
		  	</div>
		  	<h3><strong><%= @user.username %>'s Articles below: </strong></h3>
		</div>
	</div>
</div>

<%= render 'articles/articles' %>

